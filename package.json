{
  "name": "@greatminds/dp-nestjs-template",
  "version": "1.1.0-alpha.6",
  "description": "NestJs application skeleton",
  "private": true,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:doc": "redoc-cli bundle --output openapi/api-docs.html openapi/swagger.json",
    "bundle": "ncc build dist/main.js -o bundle",
    "lint-md": "remark .",
    "format-md": "remark . -o",
    "format": "prettier --write \"src/**/*.ts\" && npm run format-md",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json && npm run lint-md",
    "test": "jest",
    "test:cov": "jest --no-cache --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest",
    "test:ci:cov": "jest --ci --silent --reporters=jest-html-reporter --coverageReporters=lcov --coverage",
    "clean": "rimraf dist bundle",
    "husky": "npm run lint && npm run precise-commits",
    "prebuild:doc": "ts-node src/docs/build.ts",
    "precise-commits": "precise-commits --check-only --whitelist=\"src/**/*.ts\"",
    "bump": "bump",
    "bump:fix:ci": "npm run bump -- fix",
    "publish:ci": "npm publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run husky"
    }
  },
  "dependencies": {
    "@greatminds/dp-configuration-lib": "^4.0.0",
    "@greatminds/dp-logger-lib": "^4.0.0",
    "@greatminds/dp-nestjs-configuration-lib": "^4.0.0",
    "@greatminds/dp-nestjs-logger-lib": "^4.0.0",
    "@nestjs/common": "^7.5.4",
    "@nestjs/core": "^7.5.4",
    "@nestjs/platform-express": "^7.5.4",
    "@nestjs/swagger": "^4.8.2",
    "@nestjs/terminus": "^7.0.1",
    "class-transformer": "^0.2.3",
    "loopbench": "^1.2.0",
    "redoc-cli": "^0.12.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3"
  },
  "devDependencies": {
    "@greatminds/dp-testing-lib": "^4.0.0",
    "@greatminds/dp-versioning-lib": "^1.2.1",
    "@nestjs/testing": "^7.5.4",
    "@types/compression": "1.7.0",
    "@types/cookie-session": "^2.0.42",
    "@types/cors": "^2.8.10",
    "@types/csurf": "^1.11.0",
    "@types/express": "^4.17.11",
    "@types/helmet": "0.0.45",
    "@types/jest": "^25.2.3",
    "@types/loopbench": "^1.2.0",
    "@types/node": "^12.20.1",
    "@types/supertest": "^2.0.10",
    "@zeit/ncc": "^0.20.4",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-html-reporter": "^3.4.1",
    "nodemon": "^2.0.7",
    "precise-commits": "^1.0.2",
    "prettier": "^1.19.1",
    "remark-cli": "^8.0.1",
    "remark-lint": "^7.0.1",
    "remark-preset-lint-recommended": "^4.0.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.15",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "6.0.0",
    "typescript": "^3.9.9"
  }
}
